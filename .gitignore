# ============================================
# LampScribe .gitignore
# ============================================

# Dependencies
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# ============================================
# Next.js
# ============================================
/.next/
/out/
/build
next-env.d.ts

# ============================================
# Environment Variables
# ============================================
# IMPORTANT: Never commit these files!
.env
.env.local
.env.development
.env.development.local
.env.test.local
.env.production
.env.production.local

# Keep the example file
!.env.example

# ============================================
# Prisma
# ============================================
# Generated Prisma client (regenerated on npm install)
/src/generated/prisma
/prisma/*.db
/prisma/*.db-journal

# ============================================
# IDE & Editors
# ============================================
.idea/
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
*.swp
*.swo
*~

# ============================================
# OS Files
# ============================================
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# ============================================
# Logs
# ============================================
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*
lerna-debug.log*

# ============================================
# Testing
# ============================================
/coverage
.nyc_output
*.lcov

# ============================================
# Build & Cache
# ============================================
*.tsbuildinfo
.turbo
.cache
.parcel-cache

# ============================================
# Vercel
# ============================================
.vercel

# ============================================
# Local Development
# ============================================
# Uploaded files during development (if stored locally)
/uploads
/tmp
/temp

# Local SSL certificates
*.pem
*.key
*.crt

# ============================================
# Misc
# ============================================
*.pid
*.seed
*.pid.lock
.node_repl_history
.npm
.eslintcache
.stylelintcache
