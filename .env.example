# ============================================
# LampScribe Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ============================================
# OpenAI API Configuration
# ============================================
# Required for transcription functionality
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Database Configuration (Coming Soon)
# ============================================
# PostgreSQL connection string
# Example: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=

# ============================================
# Authentication (Coming Soon)
# ============================================
# NextAuth.js secret - generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# Storage Configuration (Coming Soon)
# ============================================
# Choose one: Vercel Blob, AWS S3, or Cloudflare R2

# Vercel Blob
BLOB_READ_WRITE_TOKEN=

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Cloudflare R2
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=

# ============================================
# Application Settings
# ============================================
# Maximum file size in MB (default: 500)
MAX_FILE_SIZE_MB=500

# Maximum audio duration in hours (default: 10)
MAX_DURATION_HOURS=10

